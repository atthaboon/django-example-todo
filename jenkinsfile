pipeline {
    agent any

    parameters {
        string(name: 'BRANCH_NAME', defaultValue: 'master', description: 'Specific Branch')
    }

    stages {
        stage("Get Code") {
            steps {
                git branch: params.BRANCH_NAME, url: 'https://github.com/atthaboon/django-example-todo.git'
            }
        }
        stage("Install library") {
            steps {
                bat "pip install -r requirements.txt"
            }
        }
        stage("Unit test") {
            steps {
                bat("python tests/TestNumber.py")
            }
            post {
                always {
					script {
						def summary = junit "test-reports/*.xml"
					
						String message = """
						Job name: *${JOB_NAME}*
						Status: ${currentBuild.currentResult}
						Tests: Passed ${summary.passCount}, Fail ${summary.failCount}
						Execution Time: ${currentBuild.durationString}
						URL: <${BUILD_URL}| View build #${BUILD_NUMBER}>
						""".stripIndent();
						
						slackSend channel: "playground", color: "#3dfc70", message: message
					}
                }
            }
        }
    }
}

