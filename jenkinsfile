pipeline {
    agent any

    stages {
        stage("Get Code") {
            steps {
                git "https://github.com/atthaboon/django-example-todo.git"
            }
        }
        stage("Install library") {
            steps {
                bat "pip install -r requirements.txt"
            }
        }
        stage("Unit test") {
            steps {
                bat("python tests/TestNumber.py")
            }
            post {
                always {
                    junit "test-reports/*.xml"
                }
            }
        }
    }
}
